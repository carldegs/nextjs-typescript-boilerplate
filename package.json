{
  "name": "nextjs-typescript-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "gen:theme-typings": "chakra-cli tokens src/theme.ts",
    "postinstall": "yarn gen:theme-typings",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check ./src/**",
    "check-lint": "eslint ./src/** --ext ts --ext tsx --ext js",
    "format": "prettier --write .",
    "test-all": "npm run check-format && npm run check-lint && npm run check-types",
    "prepare": "husky install",
    "clean": "rm -rf ./dist && rm -rf tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.0.1",
    "@chakra-ui/react": "^2.1.2",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@hookform/resolvers": "^2.8.8",
    "framer-motion": "^6",
    "joi": "^17.6.0",
    "next": "^12.1.6",
    "next-connect": "^0.12.2",
    "next-seo": "^5.4.0",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-hook-form": "^7.25.3",
    "react-query": "^3.34.12"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^2.0.0",
    "@trivago/prettier-plugin-sort-imports": "^3.1.1",
    "@types/hapi__joi": "^17.1.8",
    "@types/node": "17.0.14",
    "@types/react": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "8.8.0",
    "eslint-config-next": "12.0.10",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^8.0.1",
    "prettier": "^2.5.1",
    "typescript": "4.5.5"
  }
}
